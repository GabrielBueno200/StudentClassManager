@page
@model StudentClassManager.WebUI.Pages.Student.UpdateModel

<div asp-validation-summary="All" class="text-danger"></div>

@if (TempData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success mb-2">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Student.Name">Nome:</label>
        <input asp-for="Student.Name" value="@Model.Student.Name" type="text" class="form-control" id="Name" name="Name"/>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Student.UserName">Usuário:</label>
        <input asp-for="Student.UserName" value="@Model.Student.UserName" type="text" class="form-control" id="UserName" name="UserName"/>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Student.Password">Senha:</label>
        <input asp-for="Student.Password" value="@Model.Student.Password" type="password" class="form-control" id="Password" name="Password"/>
    </div>
    <div class="form-group mt-2">
        <input type="submit" class="btn btn-primary" value="Confirmar edição" />
    </div>
</form>