@page
@model StudentClassManager.WebUI.Pages.Class.CreateModel

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="Class.ClassName">Nome:</label>
        <input asp-for="Class.ClassName" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="Class.Year">Ano:</label>
        <input asp-for="Class.Year" class="form-control" type="number" value="2023"/>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Enviar cadastro</button>
</form>
