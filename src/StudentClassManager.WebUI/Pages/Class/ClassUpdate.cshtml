@page
@model StudentClassManager.WebUI.Pages.Class.UpdateModel

@if (TempData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success mb-2">
        @TempData["SuccessMessage"]
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" asp-for="Class.Id" value="@Model.Class.Id"/>

    <div class="form-group">
        <label asp-for="Class.ClassName">Nome:</label>
        <input asp-for="Class.ClassName" class="form-control" value="@Model.Class.ClassName"/>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Class.Year">Ano:</label>
        <input asp-for="Class.Year" class="form-control" type="number" value="@Model.Class.Year"/>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Confirmar edição</button>
</form>
